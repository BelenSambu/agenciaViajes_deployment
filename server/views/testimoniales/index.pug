//- Para exportar bootstrap de la carpeta layout
extends ../layout/index
//-block será donde se guarde lo que se quiera mostrar en el index de Layout
block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}
        .row
            .col-md-12
                include ../layout/partials/testimonial                
            .col-md-12                                          
                h2.text-center Agrega un Testimonial
                if(errores)
                    each error in errores   
                        .alert.alert-danger.text-center=error.mensaje  
                        return 
                .row.justify-content-center 
                    .col-md-8
                        form(action="/testimoniales", method="POST") 
                            .form-group
                                label(for="nombre") Nombre
                                input(id="nombre", class="form-control", type="text", placeholder="Tu nombre", name="nombre", value=nombre)
                            .form-group
                                label(for="email") Correo Electrónico
                                input(id="email", class="form-control", type="email", placeholder="Tu correo electrónico", name="correo", value=correo)
                            .form-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", rows="3", class="form-control",placeholder="Tu mensaje")=mensaje
                            input.btn.btn-success.btn-block(type = "submit", value="Agregar")
